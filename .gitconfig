[user]
  email = jvshahid@gmail.com
  name = John Shahid
[alias]
  l  = log --decorate=short --graph -w
  lw = log --decorate=short --graph --color-words -w
  ls = log --graph --decorate=short --pretty=\"format:[%Cred%h%Creset]%d %ar by %Cblue%an%Creset. %Cgreen%s%Creset\"

  d = diff -w
  dw = diff --color-words -w

	prb = pull --rebase

  s = stash save
  sp = stash pop

  co = checkout

  st = status

  c  = commit --verbose

  p  = push --tags
[core]
  editor = emacs -nw --no-desktop
[diff]
  wordRegex = [^=.,()[:space:]\"]+
[color]
	ui = auto
