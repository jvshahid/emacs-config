#!/usr/bin/env bash

image="jvshahid/development"
docker pull $image
docker rm -f emacs
docker run -d --detach-keys 'ctrl-z' \
       --rm \
       --name emacs \
       -e PATH=$PATH \
       -e DISPLAY=$DISPLAY \
       -e HOME=$HOME \
       -e TERM=screen-256color \
       --device /dev/snd \
       -v /tmp:/tmp \
       -v /dev:/dev \
       -v $HOME:$HOME \
       --user $UID:$UID \
       -it $image \
       bash -c "/usr/local/bin/emacs --daemon & read"
