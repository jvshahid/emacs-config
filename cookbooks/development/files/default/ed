#!/usr/bin/env bash

docker pull jvshahid/emacs:latest
docker run -d --detach-keys 'ctrl-z' \
       --rm \
       --name emacs \
       -e PATH=$PATH \
       -e DISPLAY=$DISPLAY \
       -e HOME=$HOME \
       -e TERM=screen-256color \
       -v /dev:/dev \
       -v /tmp:/tmp \
       -v $HOME:$HOME \
       --user $UID:$UID \
       -it jvshahid/emacs \
       bash -c "/usr/local/bin/emacs --daemon && read"
