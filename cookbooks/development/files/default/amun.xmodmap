clear control
clear mod1
clear mod4

keycode 66 = Super_L NoSymbol Super_L
keycode 64 = Control_L Control_L Control_L Control_L
keycode 108 = Control_R Control_R Control_R Control_R
keycode 133 = Alt_L Meta_L Alt_L Meta_L

! this depends on running the following (in /etc/init.d/remap_keys)
! #!/usr/bin/env bash
! sudo setkeycodes e037 97
! sudo setkeycodes 54 97

keycode 105 = Alt_R Meta_R Alt_R Meta_R

add control = Control_L Control_R
add mod4 = Super_L
add mod1 = Alt_L Alt_R
